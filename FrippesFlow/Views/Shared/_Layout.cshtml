<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FrippesFlow</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FrippesFlow.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/pieChart.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FrippesFlow.styles.css" asp-append-version="true" />

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-zoom@1.2.1/dist/chartjs-plugin-zoom.min.js"></script>
    <script src="~/js/ChartGenerator.js"></script>
</head>

<body>
    <header>
        <div class="head-container">
            <a class="header-title" asp-area="" asp-controller="Home" asp-action="Index"><img
                    src="~/images/frippe-logo.png" alt="frippes logga"></a>
            <nav class="navbar-brand">
                <ul class="nav-list">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="dashboard" asp-action="Index">DASHBOARD</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="sales" asp-action="AddEntry">NEW ENTRY</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="sales" asp-action="Index">SALES</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="results" asp-action="Index">RESULTS</a>
                    </li>
                </ul>
            </nav>
        </div>
        <img src="~/images/frallor_backg.png" alt="Frallor" class="img-banner" />
    </header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>

        <footer class="frippefooter">
            <div class="container">
                &copy; 2024 - FrippesFlow
            </div>
        </footer>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
</body>
</div>

</html>
